{
  "name": "unified-contractors",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:analyze": "vite build --mode analyze",
    "build:performance": "npm run build && npm run lighthouse",
    "preview": "vite preview",
    "lint": "eslint . --fix",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run src/test/components src/test/stores --coverage",
    "test:integration": "vitest run src/test/integration",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:performance": "vitest run src/test/performance",
    "test:security": "vitest run src/test/security",
    "test:all": "node src/test/test-runner.js",
    "test:ci": "npm run test:all && npm run test:backend",
    "test:backend": "cd backend && php artisan test",
    "test:backend:unit": "cd backend && php artisan test --testsuite=Unit",
    "test:backend:feature": "cd backend && php artisan test --testsuite=Feature",
    "test:backend:coverage": "cd backend && php artisan test --coverage",
    "lighthouse": "npx @lhci/cli@0.13.x autorun",
    "perf:audit": "npm run build && npm run lighthouse && npm run build:analyze",
    "perf:test": "node scripts/performance-test.js",
    "perf:report": "npm run perf:test && echo 'Performance report generated'"
  },
  "dependencies": {
    "@primevue/themes": "^4.0.0",
    "axios": "^1.11.0",
    "bootstrap": "^5.3.3",
    "lodash-es": "^4.17.21",
    "lucide-vue-next": "^0.320.0",
    "pinia": "^2.1.7",
    "primeicons": "^7.0.0",
    "primevue": "^3.50.0",
    "qrcode": "^1.5.4",
    "vue": "^3.4.0",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@pinia/testing": "^0.1.3",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.33.0",
    "eslint-plugin-vue": "^9.23.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "playwright": "^1.40.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "unplugin-auto-import": "^20.0.0",
    "unplugin-vue-components": "^29.0.0",
    "vite": "^6.3.5",
    "vite-plugin-pwa": "^0.21.1",
    "vite-plugin-webfont-dl": "^3.11.1",
    "vitest": "^3.2.4"
  }
}
